{% extends 'base.html.twig' %}

{% block title %}{{ game.name }} - Détails{% endblock %}

{% block body %}
<div class="container my-5">
    <a href="{{ path('app_home') }}" class="btn btn-secondary mb-4">← Retour à la liste</a>
    <div class="card mb-3 p-4" style="border-radius: 2rem;">
        <div class="row g-4 align-items-center">
            <div class="col-md-5">
                {% if game.backgroundImage %}
                    <img src="{{ game.backgroundImage }}" class="img-fluid rounded-4 shadow" alt="{{ game.name }}" style="max-height: 350px; object-fit: cover; width: 100%;">
                {% else %}
                    <div class="bg-light d-flex align-items-center justify-content-center rounded-4" style="height: 350px;">
                        <span class="text-muted">Aucune image</span>
                    </div>
                {% endif %}
            </div>
            <div class="col-md-7">
                <h1 class="card-title mb-3 fw-bold" style="font-size: 2.5rem;">{{ game.name }}</h1>
                <div class="mb-3">
                    <span class="badge bg-primary fs-6 px-3 py-2 me-2">{{ game.rating }} /5</span>
                    <span class="badge bg-secondary fs-6 px-3 py-2">{{ game.released ? game.released|date('d M Y') : 'N/A' }}</span>
                </div>
                <p class="card-text mb-4" style="font-size: 1.15rem;">
                    <strong>Description :</strong><br>
                    {{ game.description }}
                </p>
                <div class="mb-3">
                    <strong>Genres :</strong>
                    <div class="d-flex flex-wrap mt-1">
                        {% for genre in game.genres %}
                            <span class="badge bg-primary me-2 mb-2 px-3 py-2">{{ genre.name }}</span>
                        {% endfor %}
                    </div>
                </div>
                <div class="mb-3">
                    <strong>Plateformes :</strong>
                    <div class="d-flex flex-wrap mt-1">
                        {% for platform in game.platforms %}
                            <span class="badge bg-secondary me-2 mb-2 px-3 py-2">{{ platform.name }}</span>
                        {% endfor %}
                    </div>
                </div>
                <div>
                    <strong>Développeurs :</strong>
                    <div class="d-flex flex-wrap mt-1">
                        {% for dev in game.developers %}
                            <span class="badge bg-info text-dark me-2 mb-2 px-3 py-2">{{ dev.name }}</span>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
